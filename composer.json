{
  "name": "kovagoz/http-responder",
  "description": "A simple solution to create PSR-7 compatible HTTP responses.",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Zoltan Kovago",
      "email": "kovago@gmail.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "psr/http-message": "^1.0",
    "psr/http-factory": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.4.0",
    "roave/security-advisories": "dev-latest",
    "nyholm/psr7": "^1.4"
  },
  "autoload": {
    "psr-4": {
      "Kovagoz\\Http\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "test/"
    }
  }
}
